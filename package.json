  "dependencies": {
    "bcrypt": "^5.0.0",
    "express": "^4.17.1",
    "fast-glob": "^3.2.2",
    "jsonwebtoken": "^8.5.1",
    "mongodb": "^3.5.5",
    "validator": "^13.0.0"
  }
